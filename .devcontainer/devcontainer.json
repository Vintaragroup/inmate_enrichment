{
  "name": "Inmate Enrichment (Codespaces)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [4000],
  "portsAttributes": {
    "4000": {
      "label": "API",
      "onAutoForward": "notify"
    }
  },
  "containerEnv": {
    "PORT": "4000"
  },
  "postCreateCommand": "npm ci || npm install && npm run stack:up",
  "postStartCommand": "npm run stack:up",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "mongodb.mongodb-vscode",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens"
      ]
    }
  }
}
