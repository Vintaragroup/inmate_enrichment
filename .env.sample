MONGO_URI=mongodb+srv://<user>:<pass>@cluster.example.mongodb.net/?retryWrites=true&w=majority&appName=Inmates
MONGO_DB=warrantdb
SUBJECTS_COLLECTION=simple_harris
REDIS_URL=redis://redis:6379
PORT=4000
ENRICHMENT_WINDOW_HOURS=48
IDEMPOTENCY_WINDOW_SECONDS=600

# Provider API keys (use real keys in your local .env, never commit them)
PDL_API_KEY=
PIPL_API_KEY=
WHITEPAGES_API_KEY=
OPENAI_API_KEY=

AUTO_ENRICH_ENABLED=false
AUTO_ENRICH_SWEEP_CRON=*/5 * * * *
RAW_PAYLOAD_TTL_HOURS=72
QUEUE_CONCURRENCY=2
NODE_ENV=development
BOND_THRESHOLD=1000

# Optional: enable scraping DOB from HCSO website by SPN when missing
HCSO_SCRAPE_ENABLED=true
HCSO_BASE_URL=https://www.harriscountyso.org
# Fetch mode is http-only in this repo (browser mode not implemented)
HCSO_SCRAPE_MODE=http

# Provider enable switches (override auto-detect-from-key)
PROVIDER_PDL_ENABLED=false
PROVIDER_PIPL_ENABLED=true
PROVIDER_WHITEPAGES_ENABLED=false
PROVIDER_OPENAI_ENABLED=false
